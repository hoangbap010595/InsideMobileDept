@model string


@if (!String.IsNullOrEmpty(Model))
{
    <div id="headerTop">
        <div class="row">
            <div class="col-sm-12">
                <div class="pull-left text-left text-white">
                    <div>
                        <b><i class="glyphicon glyphicon-user"></i> @Model</b>
                        <button id="button-remind" title="Thông báo">
                            <span class="badge-remind">5</span>
                        </button>
                        <button id="button-logout" title="Đăng xuất"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
