<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/css/UC_Controls-2.0.css" rel="stylesheet" />
    <script src="~/Scripts/UC_Controls-2.0.js"></script>
    <link href="~/Content/css/menu.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("_Login", InsideMobileDept.Security.SessionPersister.Username)

    <div class="wrapper">
        <div class="menu-wrap">
            <div class="menu-sidebar">
                <span class="sidebar-menu-arrow"></span>
                @Html.Partial("_Menu")
            </div>
        </div>
        <div class="menu-toggle">
            <span class="toggle-button">
                <span class="menu-bar menu-bar-top"></span>
                <span class="menu-bar menu-bar-middle"></span>
                <span class="menu-bar menu-bar-bottom"></span>
            </span>
        </div>
        <div class="panel panel-success panel-main">
            <div class="panel-heading">@ViewData["Action"]</div>
            <div class="panel-body">
                @RenderBody()
            </div>
            <div class="panel-footer"></div>
        </div>
        <div class="clearfix"></div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
