<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/css/UC_Controls-2.0.css" rel="stylesheet" />
    <script src="~/Scripts/UC_Controls-2.0.js"></script>
</head>
<body>
    <div>

        @* Login *@
        @Html.Partial("_Login", InsideMobileDept.Security.SessionPersister.FullName)
        <div class="clear"></div>
        @* Content *@
        <div class="wrapper">
            <div class="menu-wrap">
                <div class="menu-sidebar">
                    <span class="sidebar-menu-arrow"></span>
                    @Html.Partial("_Menu")
                </div>
            </div>
            <div class="menu-toggle">
                <span class="toggle-button">
                    <span class="menu-bar menu-bar-top"></span>
                    @*<span class="menu-bar menu-bar-middle"></span>*@
                    <span class="menu-bar menu-bar-bottom"></span>
                </span>
            </div>
            <div class="panel-main">
                <div class="panel panel-success">
                    <div class="panel-heading">@ViewBag.Action</div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                    <div class="panel-footer"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
